    <style>
      .upload {
        position: absolute;
        height: 100px;
        opacity: 0;
        cursor: pointer;
      }
      .alert {
        position: sticky;
        z-index: 100000;
        width: 100%;
        top: 0;
      }

      .hide {
        display: none;
      }
      .simplebar-content #norequest {
        padding: 30px;
      }
      .profile-pic {
        width: 100%;
        height: 100%;
        border-radius: 50% !important;
        object-fit: cover !important;
        max-width: 100px !important;
        filter: drop-shadow(2px 4px 6px rgba(0, 0, 0, 0.8));
      }
      .sidebar-image {
        width: 30px !important;
        height: 30px !important;
      }
      .profile-edit {
        width: 70px !important;
        height: 70px !important;
        position: relative;
        background: rgba(0, 0, 0, 0.1);
        border-radius: 50%;
      }
      .user-avatar-content {
        cursor: pointer;
      }
      .imageViewer {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        height: 100vh;
        background: rgba(0, 0, 0, 0.3);
        z-index: 10000;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        visibility: hidden;
      }
      .imageViewer__actualImage {
        width: 70%;
        height: 50vh;
        display: flex;
        justify-content: center;
        align-items: center;
        position: absolute;
      }
      .imageViewer__actualImage img {
        height: 100%;
        width: 100%;
        object-fit: contain;
        filter: drop-shadow(2px 4px 6px black);
      }
      .imageViewer__actualImage button {
        position: absolute;
        bottom: 0;
        width: 50%;
        bottom: -25px;
      }
      .imageViewer__close {
        position: absolute;
        right: 0;
        top: 0;
        font-size: 25px;
        color: white;
        cursor: pointer;
        z-index: 1;
      }
      .imageViewer__active {
        visibility: visible;
      }
      .user-short-description-avatar.user-avatar {
        cursor: pointer;
      }

      .coverImage {
        height: 70%;
        width: 100%;
        object-fit: cover;
      }

      .sidebarCover {
        height: 150px;
      }

      .warning {
        background-color: #23d2e2;
        border-color: transparent;
        color: white;
        font-weight: bold;
        font-size: 1.5rem;
      }

      .alert-heading {
        columns: #3e3f5e !important;
      }
    </style>
  </head>
