    <script>
      // $(".alert").hide();
      const educationGrid = $("#education-section");

      const setProfileInfo = (data) => {
        $("title").text(data.name + "'s | Update Profile");
        $("input[name=profile_name]").val(data.name);
        $("input[name=profession]").val(data.profession);
        $("textarea[name=description]").val(data.description);
        $("input[name=website]").val(data.website);
        $("input[name=address]").val(data.address);
        $("input[name=income]").val(data.income);
        $("input[name=dob]").val(moment(data.dob).format("MM-DD-YYYY"));
        $("select[name=maritalStatus]").val(data.maritalStatus);
        $("select[name=gender]").val(data.gender);
      };

      const setSocialAccounts = (socialAccounts) => {
        if (!socialAccounts) return;
        socialAccounts.forEach((account) => {
          const type = account.accountType;
          const link = account.value;
          if (link) $(`input[name=${type}]`).val(link);
        });
      };

      const setInterests = (interests) => {
        if (!interests) return;
        $("input[name=interest_id]").val(interests.id);
        for (const [type, value] of Object.entries(interests)) {
          const area = $(`textarea[name=${type}]`);
          if (value) {
            area.val(value);
            area.parent().addClass("active");
          }
        }
      };

      const setEducations = (educations) => {
        educations.forEach((education) => {
          id = education.id;
          form = educationForm(id);
          educationGrid.append(form);
          $(`input#profile-job-${id}-title`).val(education.educationType);
          $(`select#profile-job-${id}-year-started`).val(education.started);
          $(`select#profile-job-${id}-year-ended`).val(education.ended);
          $(`textarea#profile-job-${id}-description`).val(
            education.description
          );
        });
      };

      // Preview uploaded profile
      const readUrl = (input, previewTarget) => {
        if (input.files && input.files[0]) {
          const reader = new FileReader();
          reader.onload = function (e) {
            previewTarget.attr("src", e.target.result);
            $(".imageViewer__actualImage img").attr("src", e.target.result);
            showPreview();
          };
          reader.readAsDataURL(input.files[0]);
        }
      };

      // Check file type
      /**
       * @param inputFile Single file object
       */
      const checkFileAcceptance = (inputFile) => {
        if (inputFile.type !== "image/jpeg") {
          toast($("#alert-danger"), "Profile must be a valid image");
          return false;
        }
        // ? SHOULD I CHECK SIZE
        // if(inputFile.size > 250*1024) {
        //   toast($("#alert-danger"), "Profile must be less than 250 KB")
        //   return false;
        // }
        return true;
      };

      $(document).ready(function () {
        // On image change show preview for avatar
        $("input[name=profilePicture]").change(function () {
          if (checkFileAcceptance(this.files[0])) {
            readUrl(this, $("#my-picture"));
          }
        });
        // On image change show preview for cover
        $("input[name=coverPicture]").change(function () {
          if (checkFileAcceptance(this.files[0])) {
            readUrl(this, $(".coverImage"));
          }
        });

        fetchSelfProfile().then((data) => {
          console.log(": ---------");
          console.log("data", data);
          console.log(": ---------");
          // If not authorized then login else fetch
          if (data && data.status === ERRORS.AUTH_ERROR) {
            return redirectTo("login");
          }
          setProfileInfo(data);
          setSocialAccounts(data.socialAccounts);
          setInterests(data.interests);
          setEducations(data.educations);
          // Add education
          if (data.educations.length < 1)
            educationGrid.append(educationForm(100));
          $("#add-education-btn").on("click", function () {
            educationGrid.append(
              educationForm(Math.floor(Math.random() * 100))
            );
          });
        });
      });

      // * Google autocomplete
      addressAutocomplete(google, document.getElementById("profile-address"));
      // * Google autocomplete

      const showPreview = () => {
        $(".imageViewer").addClass("imageViewer__active");
      };
      $("#user-profile").click(function () {
        showPreview();
      });
      $(".imageViewer__close").click(function () {
        $(".imageViewer").removeClass("imageViewer__active");
      });

      const currentUrl = new URL(document.location.href);
      const message = currentUrl.searchParams.get("warning");
      if (message) {
        $(".message-holder").append(`
       <div class="alert warning" role="alert">
         <p>${message}</p>
       </div>
       `);
      }
